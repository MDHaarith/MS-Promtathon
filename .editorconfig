# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx,json}]
indent_style = space
indent_size = 2
end_of_line = lf

# HTML/CSS files
[*.{html,css,scss,less}]
indent_style = space
indent_size = 2
end_of_line = lf

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

# YAML/JSON files
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
